<?xml version="1.0" encoding="utf-8"?>
<Defs>

	
	  <GeneDef ParentName="GeneJawBase">
    <defName>BX_DepravedHead</defName>
    <label>Depraved Head</label>
    <labelShortAdj>wide-mouthed</labelShortAdj>
    <description>Head</description>
    <iconPath>UI/Icons/Genes/DepravedHead</iconPath>
    <displayOrderInCategory>0</displayOrderInCategory>
    <displayCategory>Cosmetic</displayCategory>
    <biostatCpx>0</biostatCpx>
    <forcedHeadTypes>
      <li>BX_Depraved</li>
    </forcedHeadTypes>
  </GeneDef>
	
			<HeadTypeDef ParentName="AverageBase">
			<defName>BX_Depraved</defName>
			<randomChosen>false</randomChosen>
			<graphicPath>Parts/Head/DepravedHead</graphicPath>
			<requiredGenes>
				<li>BX_DepravedHead</li>
			</requiredGenes>
		</HeadTypeDef>
	
	
	<GeneDef>
		<defName>BX_CravedBody</defName>
		<label>Craved Body</label>
		<labelShortAdj>craved</labelShortAdj>
		<description>Carriers of this gene have a pinched, Craved appearance in their body.</description>
		<biostatCpx>0</biostatCpx>
		<selectionWeight>0</selectionWeight>
		<displayOrderInCategory>437</displayOrderInCategory>
		<iconPath>UI/Icons/Genes/CravedBody</iconPath>
		<exclusionTags>
			<li>Bodies</li>
			<li>Body</li>
		</exclusionTags>
		<displayCategory>Miscellaneous</displayCategory>
		<fur>BX_Craved</fur>
		<skinIsHairColor>false</skinIsHairColor>
		<tattoosVisible>false</tattoosVisible>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_Fur</nodeClass>
				<workerClass>PawnRenderNodeWorker_Fur</workerClass>
				<baseLayer>5</baseLayer>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<colorType>Skin</colorType>
				<parentTagDef>Body</parentTagDef>
			</li>
		</renderNodeProperties>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<useSkinColorForFur>true</useSkinColorForFur>
				<furHidesBody>true</furHidesBody>
			</li>
		</modExtensions>
	</GeneDef>

			<FurDef>
				<defName>BX_Craved</defName>
				<noGraphic>true</noGraphic>
				<bodyTypeGraphicPaths>
					<Male>Parts/Body/CravedBody_Male</Male>
					<Female>Parts/Body/CravedBody_Female</Female>
					<Hulk>Parts/Body/CravedBody_Hulk</Hulk>
					<Fat>Parts/Body/CravedBody_Fat</Fat>
					<Thin>Parts/Body/CravedBody_Thin</Thin>
					<Child>Parts/Body/CravedBody_Child</Child>
					<Baby>Parts/Body/CravedBody_Child</Baby>
				</bodyTypeGraphicPaths>
			</FurDef>

	<GeneDef Name="HaloBase">
		<defName>BX_Profane_Halo</defName>
		<label>Top halo</label>
		<description>Carriers of this gene emanate a dark halo</description>
		<iconPath>UI/Icons/Genes/ProfaneHalo</iconPath>
		<displayOrderInCategory>14</displayOrderInCategory>
		
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
				
				<texPaths>
				<li>Parts/Halo/ProfaneHalo</li>
				</texPaths>
				
				<drawSize>1.0</drawSize>
				<parentTagDef>Head</parentTagDef>
				<shaderTypeDef>TransparentPostLight</shaderTypeDef>
				<color>(255, 255, 255, 200)</color>
				 <colorType>Custom</colorType>
				 <rotDrawMode>Fresh</rotDrawMode>
			<drawData>
					<defaultData>
						<layer>81</layer>
						<offset>(0, -0.5, 0)</offset>
					</defaultData>
					<dataNorth>
						<layer>10</layer>
						<offset>(0, 0.3, 0.2)</offset>
					</dataNorth>	
					
					<dataEast>
						<offset>(0, 0.1, 0.2)</offset>
					</dataEast>
					
					<dataSouth>
						<offset>(0, 0.1, 0.2)</offset>
					</dataSouth>
				</drawData>
			</li>
		</renderNodeProperties>
		
				<modExtensions>
			<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VEF.Genes.GeneExtension">
				<backgroundPathXenogenes>UI/BlankNP</backgroundPathXenogenes>
			</li>
		</modExtensions>
		
	</GeneDef>
		<GeneDef Name="WingsBase">
		<defName>BX_CurvedWings</defName>
		<label>Curved Wings</label>
		<description>Carriers grow a set of curved wings</description>
		<iconPath>UI/Icons/Genes/CurvedWings</iconPath>
		<displayOrderInCategory>25</displayOrderInCategory>
		<biostatMet>0</biostatMet>
		<biostatCpx>1</biostatCpx>

		<renderNodeProperties>
			<li>
				<workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
				<texPath>Parts/Wings/CurvedWings</texPath>
				<drawSize>1.20</drawSize>
				<parentTagDef>Body</parentTagDef>
				<rotDrawMode>Fresh</rotDrawMode>
		<drawData>
					<defaultData>
						<layer>-1</layer>
					</defaultData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<dataNorth>
						<layer>90</layer>
						<offset>(0, 0.3, -0.18)</offset>
					</dataNorth>
					<dataSouth>
						<offset>(0, -0.2, -0.05)</offset>
					</dataSouth>
					<dataEast>
						<offset>(-0.13, 0.0, -0.1)</offset>
					</dataEast>
				</drawData>
			</li>
		</renderNodeProperties>
	</GeneDef>
	
	<GeneDef ParentName="GeneSkinColorOverride">
		<defName>BX_Skin_Withered</defName>
		<label>Withered skin</label>
		<labelShortAdj>withered</labelShortAdj>
		<description>Carriers of this gene have a Withered skin.</description>
		<skinColorOverride>(63, 55, 55)</skinColorOverride>
		<randomBrightnessFactor>0</randomBrightnessFactor>
		<displayOrderInCategory>94</displayOrderInCategory>
		
				<modExtensions>
			<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VEF.Genes.GeneExtension">
				<backgroundPathXenogenes>UI/BlankNP</backgroundPathXenogenes>
			</li>
		</modExtensions>
	</GeneDef>



		<GeneDef>
		<defName>BX_WitheredSoul</defName>
		<label>Withered Soul</label>
		<labelShortAdj>withered</labelShortAdj>
		<description>gene that cause a person to experience pain if they are in an bad mood.</description>
		<geneClass>EBSGFramework.HediffAdder</geneClass>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayOrderInCategory>438</displayOrderInCategory>
		<iconPath>UI/Icons/Genes/CravedBody</iconPath>
		<modExtensions>
			<li Class="EBSGFramework.EBSGExtension">
			<hediffsToApply>
				<li>
				<hediff>BX_WitheredSoulHediff</hediff>
				<onlyIfNew>true</onlyIfNew>
				</li>
			</hediffsToApply>
			<vanishingGene>false</vanishingGene>
			</li>
		</modExtensions>
	</GeneDef>

    <HediffDef>
        <defName>BX_WitheredSoulHediff</defName>
        <label>Withered Soul</label>
        <description>person to experience pain if they are in an bad mood</description>
        <everCurableByItem>false</everCurableByItem>
        <initialSeverity>0.001</initialSeverity>
        <hediffClass>HediffWithComps</hediffClass>
        <scenarioCanAdd>false</scenarioCanAdd>
        <stages>
            <li>
				<painOffset>0.35</painOffset>
				<label>Huge pain</label>
				<minSeverity>0</minSeverity>
            </li>
            <li>
				<painOffset>0.25</painOffset>
				<label>Serious pain</label>
				<minSeverity>0.3</minSeverity>
            </li>			
            <li>
				<painOffset>0.15</painOffset>
				<label>Aching pain</label>
				<minSeverity>0.6</minSeverity>
            </li>			
			<li>
				<label>Absence of pain</label>
				<minSeverity>1</minSeverity>
            </li>	
        </stages>
        <comps>
            <li Class="EBSGFramework.HediffCompProperties_SeverityByNeedLevel">
                <need>Mood</need>
                <severity>
                    <points>
                        <li>(0,0)</li>
                        <li>(0.2,0.3)</li>
                        <li>(0.3,0.6)</li>
                        <li>(0.4,1)</li>
                    </points>
                </severity>
            </li>
        </comps>
    </HediffDef>

</Defs>